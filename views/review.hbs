<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css"/>
    <title>Review</title>
  </head>
  <body>
    <h1>Leave a Review</h1>
    <form action="/review/submitted" method="GET">
      <p>
        <label for="name">Your name</label>
        <input id="name" name="name" />
      </p>
      <p>
        <label for="comment">Comment</label>
        <textarea id="comment" name="comment" rows="6" cols="50"></textarea>
      </p>
      <p>
        <input type="radio" id="1" name="score" value="1" />
        <label>1 (Worst)</label>
        <input type="radio" id="2" name="score" value="2" />
        <label>2</label>
        <input type="radio" id="3" name="score" value="3" />
        <label>3</label>
        <input type="radio" id="4" name="score" value="4" />
        <label>4</label>
        <input type="radio" id="5" name="score" value="5" />
        <label>5 (Best)</label>
      </p>
      <p>
          <button type="submit">Submit</button>
          <a href="/">Never Mind</a>
      </p>
    </form>

  </body>
</html>